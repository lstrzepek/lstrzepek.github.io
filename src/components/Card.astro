---
import PublishDate from "./PublishDate.astro";

export interface Props {
    title: string;
    description: string;
    pubDate: string;
    href: string;
}

const { href, title, description, pubDate } = Astro.props;
---

<li class="my-6">
    <a
        href={href}
        class="text-skin-accent font-medium text-lg underline-offset-4 decoration-dashed focus-visible:no-underline focus-visible:underline-offset-0 inline-block"
    >
        <h3 class="font-medium text-lg decoration-dashed hover:underline">
            {title}
        </h3>
    </a>
    <PublishDate pubDate={pubDate} />
    <p>{description}</p>
</li>
